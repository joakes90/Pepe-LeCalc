<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize"
        android:paddingBottom="32dp">

        <!-- Syringe Volume Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_syringe_volume"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/syringeVolumeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/volume30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_30_units" />

            <RadioButton
                android:id="@+id/volume50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_50_units"/>

            <RadioButton
                android:id="@+id/volume100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_100_units"
                android:checked="true" />
        </RadioGroup>

        <!-- Peptide Inputs -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_peptides"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Peptide -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_peptide_weight"
                android:textSize="18sp"
                android:textColor="@color/text_color"
                android:paddingEnd="8dp"
                android:layout_marginBottom="8dp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
            <EditText
                android:id="@+id/peptideWeightInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:hint="Amount (mg)"/>
        </LinearLayout>

        <!-- Diluent Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_bac_water_quantity"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:paddingEnd="8dp"
            android:layout_marginBottom="8dp"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>

        <EditText
            android:id="@+id/diluentInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="@string/text_volume_ml"/>

        </LinearLayout>
        <!-- Dosage Amount -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_dosage_amount"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:paddingEnd="8dp"
            android:layout_marginBottom="8dp"
            tools:ignore="RtlHardcoded,RtlSymmetry"/>

        <EditText
            android:id="@+id/dosageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="@string/text_quantity_mg"
            android:layout_marginBottom="8dp"/>


        </LinearLayout>

        <!-- Results Section - Visual Syringe Display -->
        <TextView
            android:id="@+id/resultsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_dosage_measurement"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- Measurement Text -->
        <TextView
            android:id="@+id/measurementText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <!-- Syringe Visualization -->

        <!-- Peptide Dosage Results -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/syringeVisualization"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginVertical="16dp">

            <!-- Syringe Body -->
            <View
                android:id="@+id/syringeBody"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/syringe_body"
                app:layout_constraintDimensionRatio="5:1"
                app:layout_constraintTop_toTopOf="@+id/syringeVisualization"
                />

            <!-- Syringe Fill (the colored liquid part) -->
            <View
                android:id="@+id/syringeFill"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/syringe_fill"
                app:layout_constraintHeight=""
                app:layout_constraintStart_toStartOf="@+id/syringeBody"
                app:layout_constraintTop_toTopOf="@+id/syringeBody"
                app:layout_constraintBottom_toBottomOf="@+id/syringeBody"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                />

            <!-- Tick Marks Container -->
            <LinearLayout
                android:id="@+id/tickMarksContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_toEndOf="@id/syringeFill"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/syringeBody"
                app:layout_constraintEnd_toEndOf="@+id/syringeBody"
                app:layout_constraintTop_toTopOf="@+id/syringeBody"
                app:layout_constraintBottom_toBottomOf="@+id/syringeBody">
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>